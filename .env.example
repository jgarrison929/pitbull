# =============================================================================
# Pitbull Construction Solutions - Environment Variables
# Copy to .env and fill in your values
# =============================================================================

# Database
DB_PASSWORD=change-me-in-production

# JWT Authentication
JWT_KEY=change-me-minimum-32-characters-long-random-string

# CORS (comma-separated origins for production)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Frontend API URL (baked into Next.js at build time)
NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com

# =============================================================================
# Public Demo (Railway) - Optional
# =============================================================================
# Turn on the demo bootstrapper to ensure a single demo tenant/user exists and
# seed sample data on startup.
DEMO__ENABLED=false
DEMO__SEEDONSTARTUP=false
DEMO__DISABLEREGISTRATION=true
DEMO__TENANTSLUG=demo
DEMO__TENANTNAME="Pitbull Demo"
DEMO__USEREMAIL=demo@pitbullconstructionsolutions.com
DEMO__USERPASSWORD=change-me

# Allow seeding in non-development environments when Demo is enabled
SEEDDATA__ALLOWINNONDEVELOPMENT=false

# =============================================================================
# Security & Rate Limiting
# =============================================================================
# Request size limits (bytes)
REQUESTSIZELIMITS__APIMAXSIZE=1048576
REQUESTSIZELIMITS__DOCUMENTUPLOADMAXSIZE=52428800
REQUESTSIZELIMITS__GLOBALMAXSIZE=10485760
