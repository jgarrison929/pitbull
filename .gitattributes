# Auto-detect text files and perform LF normalization
* text=auto

# Source code - always LF
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.xml text eol=lf

# Batch scripts - CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Shell scripts - LF
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary

# Exclude from export
.gitattributes export-ignore
.gitignore export-ignore
