# =============================================================================
# Pitbull Web (Next.js) - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
#
# NEXT_PUBLIC_ prefix = exposed to the browser (client-side code).
# Without the prefix = server-side only (API routes, SSR).
#
# Railway: set these as service variables. NEXT_PUBLIC_ vars must be set
# at BUILD TIME (they are baked into the JS bundle during `next build`).
# =============================================================================

# -----------------------------------------------------------------------------
# API Connection
# -----------------------------------------------------------------------------

# Base URL for the Pitbull API (no trailing slash)
# Local dev default: http://localhost:5000
# Production: https://pitbull-api-production.up.railway.app
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# Next.js Runtime
# -----------------------------------------------------------------------------

# Port the dev server / standalone server listens on (default: 3000)
PORT=3000

# Node environment (development | production | test)
NODE_ENV=development
